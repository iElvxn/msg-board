extends layout

block content

  h1 Welcome to #{title}
  div(class="container")
    ul(class = "msg-container") 
      each message in messages
        li(class = "msg") 
          strong= message.user + ":"
          div= message.text
          div= message.added.toLocaleDateString()
    
    div(class="form-container")
      p Post New Message
      form(action="/new" method="POST")
        input(type="text", name="author", placeholder="Name", required)
        input(type="text", name="msg", placeholder="Message", required)
        button(type="submit") Submit
